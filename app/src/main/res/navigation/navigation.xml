<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_main"
    app:startDestination="@id/noteFragment">

    <fragment
        android:id="@+id/noteFragment"
        android:name="com.task.noteapp.ui.list.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note">
        <action
            android:id="@+id/action_noteFragment_to_noteAddFragment"
            app:destination="@id/noteAddFragment" />
    </fragment>
    <fragment
        android:id="@+id/noteAddFragment"
        android:name="com.task.noteapp.ui.add.NoteAddFragment"
        android:label="fragment_note_content"
        tools:layout="@layout/fragment_note_add">
        <action
            android:id="@+id/action_noteAddFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
        <argument
            android:name="Note"
            android:defaultValue="@null"
            app:argType="com.task.noteapp.model.Note"
            app:nullable="true" />
    </fragment>
</navigation>